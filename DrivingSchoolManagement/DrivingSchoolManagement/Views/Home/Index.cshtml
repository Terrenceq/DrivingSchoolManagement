@using DrivingSchoolManagement.Helpers;
@using DrivingSchoolManagement.Models;
@{
    ViewBag.Title = "Witamy w naszym OSK!";
    Layout = "../Shared/_rootLayout.cshtml";
}
<script>
    function Driver(s, e) {
        var url = '@Url.Action("Index", "Drivers")';
        window.location.href = url;
    }

    function Manager(s, e) {
        var url = '@Url.Action("Index", "Managers")';
        window.location.href = url;
    }

    function Vehicle(s, e) {
        var url = '@Url.Action("Index", "Vehicles")';
        window.location.href = url;
    }

    function Account(s, e) {
        var url = '@Url.Action("Index", "Account")';
        window.location.href = url;
    }

    function Lessons(s, e) {
        var url = '@Url.Action("Index", "Lessons")';
        window.location.href = url;
    }
</script>
<link href="@Url.ContentVersioned("~/Content/materialize.min.css")" rel="stylesheet" />
<script src="@Url.ContentVersioned("~/Scripts/materialize.min.js")"></script>

<div class="container">
    <div class="row">
        @Html.Action("HomeCardPartial")
