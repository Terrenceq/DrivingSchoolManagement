            }
            <div class="col s3 tooltipped" data-position="bottom" data-delay="500" data-tooltip="Zobacz naszych instruktorów">
                @Html.DevExpress().Button(
                    settings =>
                    {
                        settings.Name = "btn-Driver";
                        settings.Width = 200;
                        settings.Height = 100;
